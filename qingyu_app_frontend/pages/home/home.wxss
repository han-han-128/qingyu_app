.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 100vh;
  background-color: #f8f8f8;
  position: relative;
}

.page-title {
  font-size: 18px;
  color: #333;
  text-align: center;
}

/* 发布按钮样式 */
.publish-btn {
  position: fixed;
  bottom: 100px;
  right: 20px;
  width: 56px;
  height: 56px;
  border-radius: 50%;
  background-color: #007aff;
  display: flex;
  align-items: center;
  justify-content: center;
  color: white;
  font-size: 14px;
  box-shadow: 0 2px 10px rgba(0, 122, 255, 0.3);
  z-index: 1000;
}