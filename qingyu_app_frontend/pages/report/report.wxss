.container {
  background-color: #f5f5f5;
  min-height: 100vh;
  padding: 100rpx 0 20rpx 0;
  display: block;
  align-items: flex-start;
}

.top-bar {
  display: flex;
  align-items: center;
  height: 88rpx;
  background-color: #ff5555;
  color: white;
  padding: 0 20rpx;
  box-sizing: border-box;
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  z-index: 999;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.back-btn {
  width: 44rpx;
  height: 44rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.back-icon {
  font-size: 36rpx;
  color: white;
  font-weight: bold;
}

.title {
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
  font-size: 34rpx;
  font-weight: 600;
}

.location-section {
  background-color: white;
  margin-bottom: 20rpx;
  padding: 26rpx 0;
  box-sizing: border-box;
  border-radius: 0;
  box-shadow: none;
}

.location-title {
  font-size: 30rpx;
  font-weight: 600;
  margin-bottom: 20rpx;
  color: #333;
}

.location-container {
  width: 100%;
}

.location-input {
  display: flex;
  align-items: center;
  padding: 20rpx;
  background-color: #f5f5f5;
  border-radius: 10rpx;
  margin-bottom: 16rpx;
}

.location-icon {
  font-size: 32rpx;
  margin-right: 16rpx;
  color: #ff5555;
}

.location-text {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

.location-hint {
  font-size: 22rpx;
  color: #999;
}

.emergency-section {
  background-color: white;
  margin-bottom: 20rpx;
  padding: 26rpx 0;
  box-sizing: border-box;
  border-radius: 0;
  box-shadow: none;
}

.section-title {
  font-size: 30rpx;
  font-weight: 600;
  margin-bottom: 20rpx;
  color: #333;
}

.emergency-options {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
  margin-bottom: 10rpx;
}

.emergency-option {
  width: 100%;
  border: 2rpx solid #eee;
  border-radius: 10rpx;
  padding: 26rpx;
  text-align: center;
  cursor: pointer;
  transition: all 0.3s ease;
  background-color: white;
  color: #333;
}

.emergency-option.active {
  border-color: #ff5555;
  background-color: #ff5555;
  color: white;
  box-shadow: 0 4rpx 15rpx rgba(255, 85, 85, 0.3);
}

.option-title {
  display: block;
  font-size: 28rpx;
  font-weight: 600;
  margin-bottom: 8rpx;
  color: inherit;
}

.option-desc {
  display: block;
  font-size: 22rpx;
  color: inherit;
  opacity: 0.8;
}

.description-section {
  background-color: white;
  margin-bottom: 20rpx;
  padding: 26rpx 0;
  box-sizing: border-box;
  border-radius: 0;
  box-shadow: none;
}

.description-input {
  width: 100%;
  min-height: 200rpx;
  border: 2rpx solid #eee;
  border-radius: 10rpx;
  padding: 20rpx;
  box-sizing: border-box;
  font-size: 24rpx;
  line-height: 1.7;
  color: #333;
  resize: vertical;
}

.placeholder {
  color: #999;
}

.word-count {
  font-size: 22rpx;
  color: #999;
  margin-top: 12rpx;
  text-align: right;
}

.evidence-section {
  background-color: white;
  margin-bottom: 20rpx;
  padding: 26rpx 0;
  box-sizing: border-box;
  border-radius: 0;
  box-shadow: none;
}

.evidence-hint {
  font-size: 22rpx;
  color: #999;
  margin-bottom: 20rpx;
}

.evidence-upload {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
  margin-bottom: 20rpx;
}

.upload-btn {
  width: 100%;
  height: 120rpx;
  border: 2rpx dashed #ff5555;
  border-radius: 10rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background-color: #fff5f5;
  cursor: pointer;
  transition: all 0.3s;
}

.upload-btn:active {
  background-color: #ffebeb;
  border-color: #ff8888;
}

.upload-icon {
  font-size: 40rpx;
  margin-bottom: 8rpx;
  color: #ff5555;
}

.upload-text {
  font-size: 22rpx;
  color: #ff5555;
}

.image-list {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
}

.image-item {
  position: relative;
  width: 180rpx;
  height: 180rpx;
  border-radius: 10rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.upload-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.delete-btn {
  position: absolute;
  top: -10rpx;
  right: -10rpx;
  width: 50rpx;
  height: 50rpx;
  background-color: rgba(255, 85, 85, 0.95);
  color: white;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  font-weight: bold;
  cursor: pointer;
  box-shadow: 0 2rpx 10rpx rgba(255, 85, 85, 0.4);
  z-index: 10;
  transition: all 0.3s;
}

.delete-btn:active {
  transform: scale(1.2);
  box-shadow: 0 4rpx 15rpx rgba(255, 85, 85, 0.6);
}

.submit-section {
  background-color: white;
  margin-bottom: 30rpx;
  padding: 26rpx 0;
  box-sizing: border-box;
  border-radius: 0;
  box-shadow: none;
}

.submit-btn {
  width: 100%;
  height: 96rpx;
  background-color: #ff5555;
  color: white;
  border-radius: 10rpx;
  font-size: 32rpx;
  font-weight: 600;
  margin-bottom: 20rpx;
  border: none;
  outline: none;
  box-shadow: 0 4rpx 20rpx rgba(255, 85, 85, 0.4);
  transition: all 0.3s ease;
  cursor: pointer;
}

.submit-btn:active {
  transform: translateY(2rpx);
  box-shadow: 0 2rpx 12rpx rgba(255, 85, 85, 0.6);
}

.submit-btn[disabled] {
  background-color: #ffcccc;
  box-shadow: none;
  transform: none;
  opacity: 0.7;
  cursor: not-allowed;
}

.agreement {
  font-size: 20rpx;
  color: #999;
  text-align: center;
  line-height: 1.6;
}