.container {
  min-height: 100vh;
  background-color: #f8f8f8;
  padding: 15px;
}

.news-detail {
  background-color: white;
  border-radius: 8px;
  padding: 20px;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
}

.news-title {
  font-size: 22px;
  color: #333;
  font-weight: bold;
  margin-bottom: 15px;
  line-height: 1.5;
}

.news-meta {
  font-size: 14px;
  color: #999;
  display: flex;
  justify-content: space-between;
  margin-bottom: 20px;
  padding-bottom: 15px;
  border-bottom: 1px solid #eee;
}

.news-content {
  font-size: 16px;
  color: #333;
  line-height: 1.8;
  margin-bottom: 20px;
}

.news-images {
  display: flex;
  flex-direction: column;
  gap: 15px;
}

.news-image {
  width: 100%;
  border-radius: 8px;
  margin-bottom: 10px;
}