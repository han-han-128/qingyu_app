/* pages/myreportlist/myreportlist.wxss */
.container {
  padding: 0;
  margin: 0;
  width: 100%;
  background-color: #f8f8f8;
  box-sizing: border-box;
}

.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 30rpx;
  background-color: #ffffff;
  border-bottom: 1rpx solid #e0e0e0;
  position: sticky;
  top: 0;
  z-index: 10;
}

.title {
  font-size: 34rpx;
  font-weight: bold;
  color: #333333;
}

.header-right {
  display: flex;
  align-items: center;
}

.more {
  font-size: 36rpx;
  color: #666666;
}

.content {
  padding: 20rpx;
  background-color: #f8f8f8;
  min-height: calc(100vh - 120rpx);
}

.loading,
.empty {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 80rpx 0;
  color: #999999;
  font-size: 28rpx;
}

.report-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.report-card {
  width: 100%;
  background-color: #ffffff;
  border-radius: 12rpx;
  padding: 30rpx;
  box-sizing: border-box;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.report-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333333;
  margin-bottom: 10rpx;
}

.report-time {
  font-size: 26rpx;
  color: #999999;
  margin-bottom: 20rpx;
}

.report-content {
  font-size: 28rpx;
  color: #666666;
  line-height: 1.5;
  margin-bottom: 20rpx;
}

.click-hint {
  font-size: 26rpx;
  color: #1aad19;
  text-align: left;
  padding: 12rpx 0;
  border-top: 1rpx solid #f0f0f0;
  margin-top: 16rpx;
}

