.container {
  background-color: #f5f5f5;
  min-height: 100vh;
  padding: 0;
  margin: 0;
  width: 100%;
  box-sizing: border-box;
  position: relative;
  display: block;
}

.header {
  padding: 20rpx 0;
  border-bottom: 1rpx solid #eee;
  background-color: #fff;
  margin-bottom: 10rpx;
  width: 100%;
}

.header .title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  text-align: center;
}

.loading, .empty {
  text-align: center;
  padding: 150rpx 0;
  color: #999;
  font-size: 28rpx;
}

.publish-list {
  display: flex;
  flex-direction: column;
}

.publish-card {
  width: 100%;
  background-color: #fff;
  padding: 30rpx;
  margin-bottom: 10rpx;
  box-sizing: border-box;
  margin-left: 0 !important;
  margin-right: 0 !important;
  position: relative;
}

.publish-card:active {
  background-color: #f8f8f8;
}

.publish-card .title {
  font-size: 34rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 16rpx;
  line-height: 1.5;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
  text-overflow: ellipsis;
}

.publish-card .time {
  font-size: 26rpx;
  color: #999;
  margin-bottom: 24rpx;
}

.publish-card .content {
  font-size: 30rpx;
  color: #666;
  line-height: 1.7;
  margin-bottom: 24rpx;
  display: -webkit-box;
  -webkit-line-clamp: 3;
  -webkit-box-orient: vertical;
  overflow: hidden;
  text-overflow: ellipsis;
  word-break: break-word;
}

/* 移除图片相关样式 */
/* 点击提示改为顶部标签样式 */
.publish-card .click-hint {
  font-size: 26rpx;
  color: #1aad19;
  text-align: left;
  padding: 12rpx 0;
  border-top: 1rpx solid #f0f0f0;
  margin-top: 16rpx;
}

/* 适配不同数量的图片显示，最多显示3张 */
.publish-card .photo-list image:nth-child(n+4) {
  display: none;
}
