/* pages/monitor-detail/monitor-detail.wxss */

page {
  background: linear-gradient(to bottom, #f0f2f5 0%, #e8eaed 100%);
  height: 100%;
  padding: 0;
  margin: 0;
}

.container {
  height: 100%;
  display: block;
  flex-direction: column;
  padding: 0;
  margin: 0;
  box-sizing: border-box;
}

/* 加载状态 */
.loading {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  height: 100%;
  gap: 20rpx;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid #e0e0e0;
  border-top-color: #1890ff;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  to { transform: rotate(360deg); }
}

.loading-text {
  font-size: 28rpx;
  color: #999;
}

/* 主内容区 */
.monitor-detail {
  flex: 1;
  display: flex;
  flex-direction: column;
  overflow-y: auto;
  padding: 0;
  margin: 0;
}

/* 视频区域 */
.video-section {
  width: 100%;
  height: 420rpx;
  background: #000;
  position: relative;
  top: 0;
  left: 0;
  z-index: 10;
}

.video-player {
  width: 100%;
  height: 100%;
}

.no-video {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  gap: 20rpx;
}

.no-video-icon {
  font-size: 80rpx;
  opacity: 0.3;
}

.no-video-text {
  color: #666;
  font-size: 28rpx;
}

/* 视频控制按钮 */
.video-controls {
  position: absolute;
  bottom: 24rpx;
  right: 24rpx;
  z-index: 20;
}

.control-btn {
  display: flex;
  align-items: center;
  gap: 8rpx;
  padding: 16rpx 32rpx;
  border-radius: 48rpx;
  font-size: 28rpx;
  font-weight: 500;
  border: none;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.3);
  backdrop-filter: blur(10rpx);
}

.start-btn {
  background: linear-gradient(135deg, #52c41a 0%, #73d13d 100%);
  color: #fff;
}

.stop-btn {
  background: linear-gradient(135deg, #ff4d4f 0%, #ff7875 100%);
  color: #fff;
}

.btn-icon {
  font-size: 24rpx;
}

.btn-text {
  font-size: 28rpx;
}

/* 实时监控标签 */
.live-badge {
  position: absolute;
  top: 24rpx;
  left: 24rpx;
  display: flex;
  align-items: center;
  gap: 8rpx;
  background: rgba(255, 68, 68, 0.9);
  backdrop-filter: blur(10rpx);
  color: #fff;
  padding: 10rpx 20rpx;
  border-radius: 24rpx;
  font-size: 24rpx;
  font-weight: 500;
  box-shadow: 0 4rpx 12rpx rgba(255, 68, 68, 0.3);
}

.live-dot {
  width: 12rpx;
  height: 12rpx;
  background: #fff;
  border-radius: 50%;
  animation: pulse 2s ease-in-out infinite;
}

@keyframes pulse {
  0%, 100% { opacity: 1; }
  50% { opacity: 0.3; }
}

/* 信息卡片 */
.info-card {
  background: #fff;
  margin: 20rpx 24rpx;
  padding: 32rpx;
  border-radius: 20rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.06);
  position: relative;
  z-index: 5;
}

.card-header {
  margin-bottom: 24rpx;
}

.title-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.card-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #1a1a1a;
}

.status-badge {
  display: flex;
  align-items: center;
  gap: 8rpx;
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
}

.status-online {
  background: linear-gradient(135deg, #e8f5e9 0%, #c8e6c9 100%);
  color: #2e7d32;
}

.status-offline {
  background: linear-gradient(135deg, #ffebee 0%, #ffcdd2 100%);
  color: #c62828;
}

.status-dot {
  width: 10rpx;
  height: 10rpx;
  border-radius: 50%;
  background: currentColor;
}

.card-desc {
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
}

.location-row {
  display: flex;
  align-items: center;
  gap: 12rpx;
  padding-top: 24rpx;
  border-top: 1rpx solid #f0f0f0;
}

.location-icon {
  font-size: 28rpx;
}

.location-text {
  font-size: 26rpx;
  color: #888;
  font-family: 'Courier New', monospace;
}

/* 数据卡片 */
.data-card {
  background: #fff;
  margin: 0 24rpx 24rpx;
  border-radius: 20rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.06);
  flex: 1;
  display: flex;
  flex-direction: column;
  position: relative;
  z-index: 5;
}

.data-header {
  padding: 32rpx 32rpx 24rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.data-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #1a1a1a;
  display: block;
  margin-bottom: 8rpx;
}

.data-subtitle {
  font-size: 24rpx;
  color: #999;
}

.data-content {
  flex: 1;
  padding: 24rpx;
  overflow-y: auto;
}

.data-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 28rpx 24rpx;
  margin-bottom: 16rpx;
  background: linear-gradient(135deg, #f8f9fa 0%, #f0f2f5 100%);
  border-radius: 16rpx;
  border-left: 6rpx solid #1890ff;
}

.data-left {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.data-label {
  font-size: 28rpx;
  color: #333;
  font-weight: 600;
  display: flex;
  align-items: center;
  min-width: 80rpx;
}

.data-label::before {
  content: '';
  display: inline-block;
  width: 12rpx;
  height: 12rpx;
  background: #1890ff;
  border-radius: 50%;
  margin-right: 12rpx;
}

.data-time {
  font-size: 22rpx;
  color: #999;
}

.data-right {
  display: flex;
  align-items: center;
  justify-content: flex-end;
}

.value-with-unit {
  display: flex;
  align-items: baseline;
  flex-direction: row;
}

.data-value {
  font-size: 42rpx;
  font-weight: bold;
  color: #1890ff;
  text-align: right;
}

.data-unit {
  font-size: 24rpx;
  color: #666;
  margin-left: 4rpx;
  min-width: 30rpx;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  padding: 120rpx 0;
  gap: 20rpx;
}

.empty-icon {
  font-size: 100rpx;
  opacity: 0.3;
}

.empty-text {
  font-size: 28rpx;
  color: #ccc;
}