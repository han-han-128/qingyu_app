.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: flex-start;
  min-height: 100vh;
  background-color: #f8f8f8;
  padding: 40rpx 20rpx;
  padding-bottom: 300rpx;
  box-sizing: border-box;
  overflow-y: scroll;
}

.page-title {
  font-size: 32rpx;
  color: #333;
  text-align: center;
  margin-bottom: 60rpx;
  margin-top: 20rpx;
  font-weight: bold;
}

.image-container {
  width: 100%;
  height: 600rpx;
  margin-bottom: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #fff;
  border-radius: 20rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
  overflow: hidden;
  position: relative;
}

.selected-image {
  width: 100%;
  height: 100%;
  object-fit: contain;
}

.placeholder-image {
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #f5f5f5;
}

.placeholder-text {
  font-size: 28rpx;
  color: #999;
}

.button-container {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.button-container t-button {
  width: 600rpx;
  height: 88rpx;
  font-size: 28rpx;
}

.image-container-hover {
  opacity: 0.8;
}

.image-hint {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  color: #888;
  font-size: 28rpx;
  pointer-events: none;
}

.identify-button {
  margin-top: 40rpx;
  width: 100%;
}

.image-label {
  font-size: 28rpx;
  color: #333;
  margin-top: 16rpx;
  text-align: center;
  font-weight: bold;
}