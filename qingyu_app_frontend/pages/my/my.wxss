/* pages/my/my.wxss */
.container {
  width: 100%;
  min-height: 100vh;
  background-color: #f5f5f5;
  display: flex;
  flex-direction: column;
  padding-top: 0;
  margin-top: 0;
  box-sizing: border-box;
}

/* 用户信息展示区域 */
.user-section {
  width: 100%;
  padding: 0 30rpx 30rpx 30rpx;
  background-color: #fff;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  border-top: none;
}

.user-info {
  display: flex;
  align-items: center;
  width: 100%;
}

.avatar {
  width: 150rpx;
  height: 150rpx;
  border-radius: 75rpx;
  margin-right: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.avatar-placeholder {
  width: 150rpx;
  height: 150rpx;
  border-radius: 75rpx;
  background-color: #07C160;
  color: #fff;
  font-size: 60rpx;
  font-weight: bold;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.user-details {
  flex: 1;
}

.nickname {
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
  display: block;
  margin-bottom: 10rpx;
}

.user-id {
  font-size: 30rpx;
  color: #999;
  display: block;
}

.no-login {
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 100%;
}

.no-login text {
  font-size: 36rpx;
  color: #666;
}

.no-login button {
  font-size: 32rpx;
  padding: 0 40rpx;
  height: 80rpx;
  line-height: 80rpx;
  border-radius: 40rpx;
}

/* 功能菜单区域 */
.menu-section {
  width: 100%;
  background-color: #fff;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  border-radius: 12rpx;
  margin-left: 0;
  margin-right: 0;
}

.menu-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 40rpx 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
  transition: background-color 0.3s;
}

.menu-item:active {
  background-color: #f8f8f8;
}

.menu-text {
  font-size: 36rpx;
  color: #333;
}

.menu-arrow {
  color: #ccc;
  font-size: 32rpx;
}

/* 退出登录按钮区域 */
.logout-section {
  width: 100%;
  padding: 40rpx 30rpx;
}

.logout-btn {
  width: 100%;
  height: 96rpx;
  line-height: 96rpx;
  font-size: 36rpx;
  border-radius: 12rpx;
}

/* 退出登录按钮 */
.logout-section {
  padding: 30rpx;
}

.logout-btn {
  font-size: 32rpx;
  background-color: #fff;
  color: #FA5151;
  border: 1rpx solid #FA5151;
}

/* 我的发布页面样式 */
.my-publish-container {
  min-height: 100vh;
  background-color: #f5f5f5;
}

.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 30rpx;
  background-color: #fff;
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  z-index: 100;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.back-btn {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 36rpx;
  color: #333;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.right {
  width: 60rpx;
}

.content {
  padding-top: 110rpx;
  padding-bottom: 30rpx;
}

.publish-list {
  background-color: #fff;
}

.publish-item {
  padding: 30rpx;
  border-bottom: 1rpx solid #eee;
}

.item-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 20rpx;
}

.item-header .title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  flex: 1;
  margin-right: 20rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
}

.item-header .time {
  font-size: 24rpx;
  color: #999;
}

.item-content {
  font-size: 28rpx;
  color: #666;
  line-height: 1.5;
  margin-bottom: 20rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.item-images {
  display: flex;
  flex-wrap: wrap;
  margin-bottom: 20rpx;
}

.item-images image {
  width: 200rpx;
  height: 200rpx;
  margin-right: 15rpx;
  margin-bottom: 15rpx;
  border-radius: 10rpx;
}

.item-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.view-count {
  font-size: 24rpx;
  color: #999;
}

.delete-btn {
  font-size: 28rpx;
  color: #FA5151;
  padding: 6rpx 20rpx;
  border-radius: 16rpx;
  border: 1rpx solid #FA5151;
}

.empty-state {
  padding: 100rpx 30rpx;
  text-align: center;
}

.empty-state text {
  font-size: 32rpx;
  color: #999;
}

.load-more {
  padding: 30rpx;
  text-align: center;
  font-size: 28rpx;
  color: #999;
}


.user-info {
  display: flex;
  align-items: center;
}

.avatar {
  width: 140rpx;
  height: 140rpx;
  border-radius: 50%;
  margin-right: 30rpx;
}

.avatar-placeholder {
  width: 140rpx;
  height: 140rpx;
  border-radius: 50%;
  background-color: #1aad19;
  color: white;
  font-size: 48rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-right: 30rpx;
}

.user-details {
  flex: 1;
}

.nickname {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  display: block;
  margin-bottom: 10rpx;
}

.user-id {
  font-size: 28rpx;
  color: #999;
  display: block;
}

.no-login {
  text-align: center;
  padding: 40rpx 0;
}

.no-login text {
  font-size: 32rpx;
  color: #999;
  display: block;
  margin-bottom: 30rpx;
}

/* 功能菜单区域样式 */
.menu-section {
  background-color: #fff;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
  overflow: hidden;
}

.menu-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.menu-item:last-child {
  border-bottom: none;
}

.menu-text {
  font-size: 32rpx;
  color: #333;
}

.menu-arrow {
  color: #ccc;
  font-size: 32rpx;
}

/* 退出登录按钮样式 */
.logout-section {
  padding: 40rpx 20rpx;
}

.logout-btn {
  font-size: 32rpx;
  border-radius: 8rpx;
  margin: 0;
}

/* 适配不同尺寸的手机 */
@media screen and (max-width: 375px) {
  .nickname {
    font-size: 32rpx;
  }
  
  .user-id {
    font-size: 26rpx;
  }
  
  .menu-text {
    font-size: 30rpx;
  }
}